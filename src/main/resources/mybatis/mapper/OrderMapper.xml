<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mybatis.mapper.OrderMapper">
    <sql id="orderColumns">
        id,
        order_id AS orderId,
        logistics_freight_id AS logisticsFreightId,
        order_status AS orderStatus,
        collect_type AS collectType,
        total_charge AS totalCharge,
        remark,
        create_time AS createTime,
        update_time AS updateTime
    </sql>

    <insert id="insertOrder" parameterType="Order" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO order (order_id, logistics_freight_id, order_status, collect_type, total_charge, remark)
        VALUES (#{orderId}, #{logisticsFreightId}, #{orderStatus}, #{collectType}, #{totalCharge}, #{remark})
    </insert>

    <select id="findOrderByOrderId" parameterType="String" resultType="Order">
        SELECT <include refid="orderColumns"></include>
        FROM order WHERE order_id = #{orderId}
    </select>

    <select id="findOrderByLogisticsFreightId" parameterType="Long" resultType="Order">
        SELECT <include refid="orderColumns"></include>
        FROM order WHERE logistics_freight_id = #{logisticsFreightId}
    </select>
</mapper>